<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguraPartidaActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTimeUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1ยบ Time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lblTimeUm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <TextView
            android:id="@+id/txtTimeDois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2ยบ Time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lblTimeDois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <Button
            android:id="@+id/btnIniciarPlacar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Partida"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>